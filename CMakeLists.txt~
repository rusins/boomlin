project(boomlin)

CMAKE_MINIMUM_REQUIRED(VERSION 3.9)

#use pkg-config tool to detect gtk headers and link libs
FIND_PACKAGE(PkgConfig REQUIRED)

PKG_CHECK_MODULES(GTKMM REQUIRED gtkmm-3.0)
#include gtkmm headers
INCLUDE_DIRECTORIES(${GTKMM_INCLUDE_DIRS})
LINK_DIRECTORIES($GTKMM_LIBRARY_DIRS})

#add other flags from gtkmm
ADD_DEFINITIONS(${GTKMM_CFLAGS_OTHER})

#add executabel compiled from main.cpp
ADD_EXECUTABLE(boomlin main.cpp)

#link the target to the gtkmm libraries
TARGET_LINK_LIBRARIES(boomlin ${GTKMM_LIBRARIES})
